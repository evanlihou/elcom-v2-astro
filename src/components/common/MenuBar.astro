---
import ThemeSwitch from './ThemeSwitch';

type Link = {
  displayText: string;
  url: string;
}
export interface Props {
  links: Link[]
};
let links: Link[] = [];
// [{
//   displayText: 'Home',
//   url: '/'
// },{
//   displayText: 'Now',
//   url: '/now'
// },{
//   displayText: 'Blog',
//   url: 'https://blog.evanlihou.com/'
// }]

---

<div class="menu">
  <div class="links">
    {links.map((link, idx) => 
        <><a href={link.url}>{link.displayText}</a>{idx < links.length-1 && <span>/</span>}</>
    )}
  </div>
  <div class="themeSwitch">
    <ThemeSwitch client:load />
  </div>
</div>
<style lang="scss">
  .menu {
    padding-top: 10px;
    padding-bottom: 10px;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    background: black;
    position: relative;
    z-index: 10;

    .links {
      grid-column-start: 2;
      * {
        vertical-align: middle
      }
      a {
        display: inline-block;
        text-decoration: none;
        color: white;
      }
    }

    span {
      display: inline-block;
      color: white;
      padding: 0 10px;
      -moz-user-select: none;
      -ms-user-select: none;
      -khtml-user-select: none;
      -webkit-user-select: none;
      -webkit-touch-callout: none;
    }

    .themeSwitch {
      float: right;
      margin-left: auto;
      padding-right: 10px;

      @media only screen and (max-width: 500px) {
        float: unset;
        grid-column-start: 2;
        padding-right: 0;
        padding-top: 10px;
        margin-left: 0;
        justify-self: center;
      }
    }
    
    @media print {
      display: none;
    }
  }
    
</style>
