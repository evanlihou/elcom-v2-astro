---
import { siteConfigStore } from '../siteConfigStore';
import PageLayout from '../layouts/PageLayout.astro';

import Header from '../components/common/Header.astro';
import AboutMe from '../components/home/AboutMe.astro';
import Positions from '../components/home/Positions.astro';
import Skills from '../components/home/Skills.astro';

const siteConfig = siteConfigStore.get();
---

<PageLayout title="Home">
  <Header slot="header" />

  <AboutMe set:html={siteConfig.aboutMe}></AboutMe>
  <hr />
  <Positions />
  <hr />
  <Skills />
</PageLayout>
